@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<main class="bs-docs-masthead-other" id="content" role="main">
    <div class="panel panel-default"  style="width:90%;margin:0 auto;text-align:left;">
        
        <div class="panel-body">
             <h4 class="signup">
           <strong id="signuptext">Home Page</strong> 
           <br />
           <small>Offcampus4u - Learn, Work & Earn</small>
       </h4>
       <div class="signupform">
           <div class="col-sm-6 col-md-3" style="text-align:center;">
                <a href="@Url.Action("Index", "Employer")" class="thumbnail">
                    <img src="~/Images/post.png" alt="Post Job">
                    <div class="caption">
                    <h4>Employer</h4>
                    </div>
                </a>
            </div>
           <div class="col-sm-6 col-md-3" style="text-align:center;">
                <a href="@Url.Action("Index", "Job")" class="thumbnail">
                    <img src="~/Images/posthistory.png" alt="Post History">
                    <div class="caption">
                    <h4>Approve Job Post</h4>
                    </div>
                </a>
            </div>

           <div class="col-sm-6 col-md-3" style="text-align:center;">
                <a href="@Url.Action("Index", "Company")" class="thumbnail">
                    <img src="~/Images/posthistory.png" alt="Post History">
                    <div class="caption">
                    <h4>Companies</h4>
                    </div>
                </a>
            </div>
        </div>
    </div>
        
        </div>
</main>