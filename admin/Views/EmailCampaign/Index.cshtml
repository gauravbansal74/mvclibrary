@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


<main class="bs-docs-masthead-other" id="content" role="main">
    <div class="panel panel-default"  style="width:90%;margin:0 auto;text-align:left;">
        
        <div class="panel-body">
             <h4 class="signup">
           <strong id="signuptext">Email Campaigns</strong> 
       </h4>
       <div class="signupform">
           <table style="width:100%;">
               <tr>
                   <td>Send Verification Email to Non-verified users</td>
                   <td><a href="@Url.Action("UnVerifiedUser","EmailCampaign")">See Users</a></td>
               </tr>
               <tr>
                   <td>Birthday Wish</td>
                   <td><a href="@Url.Action("todayBirthday","EmailCampaign")">See Users</a></td>
               </tr>
           </table>
        </div>
    </div>
        
        </div>
</main>
<script>
    $("#sendverificationemail").click(function () {
        $("#sendverificationemail").html("Processing...Wait some time.");
        $.ajax({
            type: "POST",
            url: "@(Url.Action("sendEmailVerification", "EmailCampaign"))"
        })
        .done(function (data) {
            console.log("done", data);
            showalert(data.isSuccess, data.message);
        })
        .fail(function (data) {
            console.log("fail", data);
            showalert(data.isSuccess, data.message);
        });
        $("#sendverificationemail").html("Click here to Send");
    });
</script>