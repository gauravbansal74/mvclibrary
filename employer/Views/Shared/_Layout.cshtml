<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Offcampus4u is a FREE networking platform to learn about the latest technologies, apply for new job opportunities and you can earn money by referring jobs.">
    <meta name="keywords" content="HTML, CSS, JS, JavaScript, framework, bootstrap, front-end, frontend, web development">
    <meta name="author" content="Gaurav Kumar and Offcampus4u contributors team">

    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/Content/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/dist/css/site.css" />
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- Favicons -->
    <link rel="shortcut icon" href="/favicon.ico" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

    <script src="~/Content/dist/js/cstm.js"></script>
    <script>
        CURRENT_PAGE_URL = document.URL;
    </script>
    <style>
        .panel-default {
            min-height: 500px;
        }
    </style>
</head>

<body class="bs-docs-home" id="maindiv" style="z-index: 1; text-align: center;">
    <!-- Docs master nav -->
    <header class="navbar navbar-static-top bs-docs-nav" id="top" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Employer")" style="font-family: Calibri, Candara, Segoe, 'Segoe UI', Optima, Arial, sans-serif;font-size: 33px;font-style: normal;font-variant: normal;font-weight: bold;color:#34495e;text-decoration:none;">Offcampus4u</a>
            </div>
            <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.ActionLink("Account", "Index", "Employer")
                    </li>
                    <li>
                        @Html.ActionLink("Jobs", "SaveJob", "Job")

                    </li>
                    <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                </ul>
            </nav>
        </div>
    </header>
    <div id="body">
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="bs-docs-social">
            <ul class="bs-docs-social-buttons">

                <li style="width: 150px;">
                    <iframe src="//www.facebook.com/plugins/like.php?href=https%3A%2F%2Fwww.facebook.com%2Foffcampus4u&amp;width&amp;layout=button_count&amp;action=like&amp;show_faces=true&amp;share=true&amp;height=21&amp;appId=638061509570883" scrolling="no" frameborder="0" style="border: none; overflow: hidden; height: 21px;" allowtransparency="true"></iframe>
                </li>
                <li class="follow-btn">
                    <a class="twitter-follow-button" href="https://twitter.com/offcampus4u" data-show-count="true" data-lang="en">Follow @@offcampus4u</a>
                </li>
                <li class="tweet-btn">
                    <a href="https://twitter.com/share" class="twitter-share-button" data-via="offcampus4u" data-related="offcampus4u" data-hashtags="offcampus4u" data-dnt="true">Tweet</a>
                </li>
                <li>
                    <script src="//platform.linkedin.com/in.js" type="text/javascript"> lang: en_US</script>
                    <script type="IN/Share" data-counter="right"></script>
                </li>
            </ul>
        </div>
        <div class="bs-docs-masthead" style="padding: 10px;">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Offcampus4u</p>
            </div>
        </div>
    </footer>




    <script>!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = p + '://platform.twitter.com/widgets.js'; fjs.parentNode.insertBefore(js, fjs); } }(document, 'script', 'twitter-wjs');</script>

    <script src="~/Content/dist/js/bootstrap.min.js"></script>
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-58038881-1', 'auto');
        ga('send', 'pageview');

    </script>
</body>
</html>
