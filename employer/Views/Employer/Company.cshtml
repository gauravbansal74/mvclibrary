@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="bs-docs-masthead-other" style="width: 80%; margin: 0 auto;">
    <div class="panel panel-default"  style="width:20%;margin:0 auto;text-align:left;float:left;">
        @Html.Partial("_accountLeftMenu")
        </div>
 <div class="panel panel-default"  style="width:78%;margin:0 auto;float:right;text-align:left;padding:10px;" >
    <div class="panel-heading">
      <h3 class="panel-title"><b>Account Informations</b></h3>
     </div>
     
    <div class="form-group" style="width:100%; margin:0 auto; text-align:center;">
        <img src="http://localhost:2008/AppImages/CompanyImage/@Model.companyLogo" width="100px" />
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Company Name</label>
        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Full Name" value="@Model.companyName" />
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">About the Company</label>
        <textarea class="form-control">@Model.companyAbout</textarea>
    </div>
    <div class="form-group">
        <label for="exampleInputFile">Company Website</label>
        <input type="text" class="form-control" value="@Model.companyWebsite"/>
    </div>

</div>
</main>
