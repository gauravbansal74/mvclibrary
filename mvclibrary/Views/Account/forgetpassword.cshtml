@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://apis.google.com/js/client:platform.js" async defer></script>
<main class="bs-docs-masthead-other" id="maindiv">
    
 <div class="panel panel-default"  style="width:40%;margin:0 auto;text-align:left;">
  <div class="panel-body">
       <h4 class="signup">
           <strong id="signuptext">Forgotten your password?</strong> 
           <br />
           <small>India's Largest Technical Network.</small>
       </h4>
    <div class="signupform ">
      <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" id="inputEmail" placeholder="info@offcampus4u.in">
      </div>
      <button id="submit_button"  class="btn btn-primary">Send Password</button> or <a href="@Url.Action("index","Account")">Register/Login</a>
    </div>
  </div>
</div>
</main>
<script>
    

    $("#submit_button").on('click', function () {
            $.ajax({
                type: "POST",
                url: "@(Url.Action("sendPassword", "Account"))",
                        data: { email: $("#inputEmail").val() }
                    })
                    .done(function (data) {
                        console.log("done", data);
                        showalert(data.isSuccess, data.message);
                    })
                    .fail(function (data) {
                        console.log("fail", data);
                        showalert(data.isSuccess, data.message);
                    });

            });
</script>
    