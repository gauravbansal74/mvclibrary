@{
    ViewBag.Title = "Offcampus4u : India's Largest Free Tutorials Website.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="bs-docs-masthead-other" id="content" role="main">
    <div class="panel panel-default"  style="width:90%;margin:0 auto;text-align:left;">
        
        <div class="panel-body">
             <h4 class="signup">
           <strong id="signuptext">Tutorials</strong> 
           <br />
           <small>Offcampus4u - Learn, Work & Earn</small>
       </h4>
       <div class="signupform">
           @{
               foreach (var category in Model)
               {
                    <div class="col-sm-6 col-md-3" style="text-align:center;">
                        <a href="@Url.Action("Tutorial", "Tutorials", new {id = category.tutorialCategoryId })" class="thumbnail">
                          <img src="~/AppImages/TutorialCategory/@category.tutorialCategoryFileName" alt="...">
                          <div class="caption">
                            <h4>@category.tutorialCategoryName</h4>
                            </div>
                        </a>
                      </div>
                   
                 
               }
            }
        </div>
    </div>
        
        </div>
</main>