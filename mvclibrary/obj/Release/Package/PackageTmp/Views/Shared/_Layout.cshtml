    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/Content/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/dist/css/site.css" />
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
