           <li role="presentation"><a href="@Url.Action("SearchJob", "Job", new { location = "Kolkata" })">Jobs in Kolkata</a></li>
        </ul>
    </div>
    <div class="panel panel-default"  style="width:78%;margin:0 auto;text-align:left;float:right;" >
    <div class="well" style="margin:0 auto;width:100%; text-align:center;">
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <!-- offcampus4u_main2_AdSense1_728x90_as -->
            <ins class="adsbygoogle"
                    style="display:inline-block;width:728px;height:90px"
                    data-ad-client="ca-pub-7843509776288043"
                    data-ad-slot="1962217363"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
      </div>
        <div id="jobList"></div>
    </div>
    <div style="clear:both;"></div>
</main>
<script>
    blockBySpinner('#jobList');
    var pageNumber = 0;
    $.ajax({
        type: "POST",
        url: "@(Url.Action("GetSearchResult", "Job"))",
        data: {
            id: pageNumber,
            skiilsdesignationcompany: getParameterByName('skiilsdesignationcompany'),
            location: getParameterByName('location'),
            jobMinExp: getParameterByName('jobMinExp'),
            jobMinSalary: getParameterByName('jobMinSalary'),

        }
    })
    .done(function (data) {
        var myhtml = "";
        data.forEach(function (entry) {
            myhtml = myhtml + '<div class="well" style="line-height: 1.42857143;"><a target="_blank" href="/Job/Detail/' + entry.jobId + '" style="line-height: 1.42857143;">' + entry.jobTitle + '</a> <br />';
            myhtml = myhtml + entry.jobCompnayName + ' <br />';
            myhtml = myhtml + '<div class="color-light pull-left" style="margin-right:10%;line-height: 1.42857143;"><span class="glyphicon glyphicon-briefcase" aria-hidden="true" style="line-height: 1.42857143;"></span>&nbsp;&nbsp;<span>' + entry.jobMinExp + '</span><span> - </span><span>' + entry.jobMaxExp + '</span><span> yrs.</span></div>';
            myhtml = myhtml + '<div class="color-light" style="line-height: 1.42857143;"><span class="glyphicon glyphicon-map-marker" aria-hidden="true" style="line-height: 1.42857143;"></span>&nbsp;&nbsp;' + entry.jobLocation + '</div>';

            if (!entry.jobDisclosed) {
                myhtml = myhtml + '<div class="salary" style="line-height: 2.42857143;"><span>&#8377;&nbsp;&nbsp;Not Disclosed</span></div></div>';
            }
            else {
                myhtml = myhtml + '<span>&#8377;&nbsp;&nbsp;' + entry.jobMinSalary + ' - ' + entry.jobMaxSalary + ' PA</span> </div></div>';
            }
        });
        $("#jobList").html(myhtml);
        blockBySpinner('#jobList', true);
        pageNumber = pageNumber + 1;
    })
    .fail(function (data) {
        showalert(data.isSuccess, data.message);
    });

    function getjobPagination() {
        $.ajax({
            type: "POST",
            url: "@(Url.Action("getjobs", "Job"))",
            data: { id: pageNumber }
        })
    .done(function (data) {
        var myhtml = "";
        data.forEach(function (entry) {
            myhtml = myhtml + '<div class="well" style="line-height: 1.42857143;"><a target="_blank" href="/Job/Detail/' + entry.jobId + '" style="line-height: 1.42857143;">' + entry.jobTitle + '</a> <br />';
            myhtml = myhtml + entry.jobCompnayName + ' <br />';
            myhtml = myhtml + '<div class="color-light pull-left" style="margin-right:10%;line-height: 1.42857143;"><span class="glyphicon glyphicon-briefcase" aria-hidden="true" style="line-height: 1.42857143;"></span>&nbsp;&nbsp;<span>' + entry.jobMinExp + '</span><span> - </span><span>' + entry.jobMaxExp + '</span><span> yrs.</span></div>';
            myhtml = myhtml + '<div class="color-light" style="line-height: 1.42857143;"><span class="glyphicon glyphicon-map-marker" aria-hidden="true" style="line-height: 1.42857143;"></span>&nbsp;&nbsp;' + entry.jobLocation + '</div>';

            if (!entry.jobDisclosed) {
                myhtml = myhtml + '<div class="salary" style="line-height: 2.42857143;"><span>&#8377;&nbsp;&nbsp;Not Disclosed</span></div></div>';
            }
            else {
                myhtml = myhtml + '<span>&#8377;&nbsp;&nbsp;' + entry.jobMinSalary + ' - ' + entry.jobMaxSalary + ' PA</span> </div></div>';
            }
        });
        $("#jobList").append(myhtml);
        blockBySpinner('#jobList', true);
        pageNumber = pageNumber + 1;
    })
        .fail(function (data) {
            showalert(data.isSuccess, data.message);
        });
    }

    $(window).scroll(function () {
        if ($(window).scrollTop() == $(document).height() - $(window).height()) {
            blockBySpinner('#jobList');
            getjobPagination();
        }
    });

</script>