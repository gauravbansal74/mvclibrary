<main class="bs-docs-masthead-other" style="width:80%;margin:0 auto; ">
     <div class="panel panel-default"  style="width:20%;margin:0 auto;text-align:left;float:left;">
         <div class="panel-heading">
            <h3 class="panel-title"><b>Jobs by Location</b></h3>
          </div>
       <ul class="nav nav-pills nav-stacked" style="max-width: 300px;">
           <li role="presentation"><a href="@Url.Action("SearchJob", "Job", new { location = "Bangalore" })">Jobs in Bangalore</a></li>
           <li role="presentation"><a href="@Url.Action("SearchJob", "Job", new { location = "Mumbai" })">Jobs in Mumbai</a></li>
           <li role="presentation"><a href="@Url.Action("SearchJob", "Job", new { location = "Delhi" })">Jobs in Delhi</a></li>
           <li role="presentation"><a href="@Url.Action("SearchJob", "Job", new { location = "Hyderabad" })">Jobs in Hyderabad</a></li>
           <li role="presentation"><a href="@Url.Action("SearchJob", "Job", new { location = "Pune" })">Jobs in Pune</a></li>
           <li role="presentation"><a href="@Url.Action("SearchJob", "Job", new { location = "Gurgoan" })">Jobs in Gurgoan</a></li>
